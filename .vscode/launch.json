{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload"
            ],
            "python": "${workspaceFolder}/.venv/bin/python",
            "jinja": true,
            "cwd": "${workspaceFolder}/src"
        }
    ]
}